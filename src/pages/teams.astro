---

<Layout title="Equipos - Tarreo INACAP 2024">
  <main class="pt-20">
    <section class="py-20 bg-gradient-to-b from-dark to-dark/50 min-h-screen">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-permanent-marker text-center mb-12">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-inacap-red">
            Equipos Participantes
          </span>
        </h1>

        {Object.entries(games).map(([key, game]) => (
          <div class="mb-16" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-8">
              <img src={game.logo} alt={game.name} class="w-16 h-16 object-contain" />
              <h2 class="text-3xl font-permanent-marker bg-clip-text text-transparent bg-gradient-to-r from-white to-inacap-red">
                {game.name}
              </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {game.teams.map(team => (
                <div class="bg-dark/50 rounded-xl p-6 border border-inacap-red/20 hover:border-inacap-red transition-all hover:scale-105 group">
                  <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold group-hover:text-inacap-red transition-colors">{team.name}</h3>
                  </div>
                  <p class="text-gray-400 mb-4 text-sm">{team.career}</p>
                  <div class="space-y-3">
                    {team.members.map(member => (
                      <div class="flex items-center justify-between text-sm">
                        <span class="text-white/90">{member.name}</span>
                        <span class="text-inacap-red font-medium">{member.role}</span>
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>